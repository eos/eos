FROM ubuntu:bionic
ENV DEBIAN_FRONTEND noninteractive
RUN mkdir -p /src /build
RUN apt-get -qq update && apt-get install -y apt-transport-https curl gnupg
RUN curl -L https://packagecloud.io/eos/eos/gpgkey | apt-key add -
RUN echo 'deb https://packagecloud.io/eos/eos/ubuntu/ artful main' > /etc/apt/sources.list.d/eos.list
RUN apt-get -qq update && apt-get install -y autoconf automake g++ libtool pkg-config libboost-filesystem-dev libboost-python-dev libboost-system-dev libfftw3-3 libfftw3-dev libgsl0-dev libhdf5-serial-dev libyaml-cpp-dev python3 python3-dev python3-h5py python3-matplotlib python3-scipy python3-yaml minuit2 libpmc
ADD . /src
